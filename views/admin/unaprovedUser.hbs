<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>User List</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">

</head>

<body>

    {{>adminnav}}

    <div style=" background-image:url();">
        <div class="box-header">

            <table class="table table-striped">

                <tr>
                    <th>User Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Address</th>
                    <th>Image</th>
                    <th>Block/Unblock</th>
                </tr>
                {{#each users}}
                <td>{{this.name}}</td>
                <td>{{this.email}}</td>
                <td>{{this.phone}}</td>
                <td>{{this.address}}</td>
                <td><img src="../images/user/{{this._id}}.jpg" height="50px" width="50px" style="border-radius: 50%;"
                        alt=""></td>
                <td>
                    {{#if this.block}}
                    <a class='btn btn-success' href="/admin/unblockuser?id={{this._id}}">Unblock</a>
                    {{else}}
                    <a class='btn btn-danger' href="/admin/blockuser?id={{this._id}}">Block</a>
                    {{/if}}
                </td>
                {{/each}}
            </table>
        </div>

</body>

</html>