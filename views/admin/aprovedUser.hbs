</head>
<body>
    
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTaCXqR84o5WvhkBWp_aMbqFyHdu3E3dav36vG4EPIjsaBzA7eH" style='height:50px;width:50px;border-radius:50%'>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01"
                aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link " href="/">Home
                            <span class="sr-only">(current)</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/adddoctor">Add Doctor</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/viewdoctorlist">View Doctor</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/unaprovedusers">Unaproved User</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Change Password</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Logout</a>
                    </li>
                </ul>
                <form class="form-inline">
                    <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                    <button class="btn btn-outline-info my-2 my-sm-0" type="submit">Search</button>
                </form>
            </div>
        </nav>
        <table class="table table-striped">
        <tr>
            <th>User Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Address</th>
            <th>Image</th>
            <th>Unaproved</th>
        </tr>
        {{#each users}}
            <td>{{this.name}}</td>
            <td>{{this.email}}</td>
            <td>{{this.phone}}</td>
            <td>{{this.address}}</td>
            <td><img src="../images/user/{{this.id}}.jpg" height="50px" width="50px" style="border-radius: 50%;" alt=""></td>
            <td><a class='btn btn-success' href="/unaproveuser?id={{this.id}}">Aprove</a></td>
        {{/each}}
    </table>
    </div>
    
</body>
