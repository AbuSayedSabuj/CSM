<body>
    </div>
    <center>
        <div class="col-sm-9">





            <h3>
                <p style="margin-left:12em">Staff Registration-Form</p>
            </h3>
            <hr>
            </hr>
            <!---Form starting---->
            <form action="/admin/addstaff" method="post" encType="multipart/form-data">
                <div class="row ">
                    <!--- For Name---->
                    <div class="col-sm-12">
                        <div class="row">
                            <div class="col-xs-4">
                                <label class="firstname">Full name :</label> </div>
                            <div class="col-xs-8">
                                <input required="" type="text" name="name" placeholder="Enter Staff's Full Name" class="form-control ">
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-12">
                        <div class="row">
                            <div class="col-xs-4">
                                <label class="mail">&nbspAge :</label> </div>
                            <div class="col-xs-8">
                                <input required="" type="number" id="email" min="20" max="120" name="age" placeholder="Enter Staff's Age"
                                    class="form-control ">
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-12">
                        <div class="row">
                            <div class="col-xs-4">
                                <label class="mail">&nbspSalary :</label> </div>
                            <div class="col-xs-8">
                                <input required="" type="number" id="email" min="20" name="salary" placeholder="Enter Staff's salary"
                                    class="form-control ">
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-12">
                        <div class="row">
                            <div class="col-xs-4">
                                <label class="mail">Email :</label></div>
                            <div class="col-xs-8">
                                <input required="" type="email" name="email" id="email" placeholder="Enter Staffs email"
                                    class="form-control">
                            </div>
                        </div>
                    </div>


                    <!-----------For Phone number-------->
                    <div class="col-sm-12">
                        <div class="row">
                            <div class="col-xs-4 ">
                                <label class="gender">Gender:</label>
                            </div>

                            <div class="col-xs-4 male">
                                <input type="radio" name="gender" id="gender" value="male">Male</input>
                            </div>

                            <div class="col-xs-4 female">
                                <input type="radio" name="gender" id="gender" value="female">Female</input>
                            </div>

                        </div>
                        <div class="col-sm-12">
                            <div class="row">
                                <div class="col-xs-4">
                                    <label class="mail">Phone :</label></div>
                                <div class="col-xs-8">
                                    <input required="" type="text" maxlength="11" minlength="11" id="email" name="phone"
                                        id="email" placeholder="Enter Staffs Phone No" class="form-control">
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <div class="row">
                                <div class="col-xs-4">
                                    <label class="mail">Password :</label></div>
                                <div class="col-xs-8">
                                    <input required="" type="password" maxlength="5" id="email" name="password"
                                        placeholder="Enter Staffs Password" class="form-control">
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <div class="row">
                                <div class="col-xs-4">
                                    <label class="mail">Confirm Password :</label></div>
                                <div class="col-xs-8">
                                    <input required="" type="password" maxlength="5" id="email" name="cpassword"
                                        placeholder="Confirm Password" class="form-control">
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <div class="row">
                                <div class="col-xs-4">
                                    <label class="mail">Address :</label></div>
                                <div class="col-xs-8">
                                    <input required="" type="text" id="email" name="address" placeholder="Enter Staffs Address"
                                        class="form-control">
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <div class="row">
                                <div class="col-xs-4">
                                    <label class="mail">Join Date :</label></div>
                                <div class="col-xs-8">
                                    <input type="date" required="" id="email" name="join_date" placeholder="Enter Date of joining"
                                        class="form-control">
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <div class="row">
                                <div class="col-xs-4">
                                    <label class="mail">Start Time :</label></div>
                                <div class="col-xs-8">
                                    <input type="time" required="" id="email" name="start_time" placeholder="Enter the start of visiting time"
                                        class="form-control">
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <div class="row">
                                <div class="col-xs-4">
                                    <label class="mail">End Time :</label></div>
                                <div class="col-xs-8">
                                    <input type="time" required="" id="email" name="end_time" placeholder="Enter the end of visiting time"
                                        class="form-control">
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <div class="row">
                                <div class="col-xs-4">
                                    <label class="mail">Duty Days:</label></div>
                                <div class="col-xs-8">
                                    <select class="js-example-basic-multiple form-control " name="days" multiple="multiple">
                                        <option value="Saturday">Saturday</option>
                                        <option value="Sunday">Sunday</option>
                                        <option value="Monday">Monday</option>
                                        <option value="Tuesday">Tuesday</option>
                                        <option value="Wednesday">Wednesday</option>
                                        <option value="Thursday">Thursday</option>
                                        <option value="Friday">Friday</option>

                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <div class="row">
                                <div class="col-xs-4">
                                    <label class="mail">Image :</label></div>
                                <div class="col-xs-8">
                                    <input type="file" name="image" class="form-control" name="available">
                                </div>
                            </div>
                        </div>

                        <div class="col-sm-12" style="margin-top:10px">
                            <button class="btn btn-warning">Add Staff</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>

        </div>

</body>
